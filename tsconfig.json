{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["*.ts", "scripts/**/*.ts", "server/**/*.ts"],
  "exclude": ["node_modules"]
}
